<%= form_with url: root_path, method: :get, data: {turbo_frame: "products-list", turbo_action: "advance"} do %>
  <div class="mt-10 grid grid-cols-1 gap-y-8 gap-x-6 sm:grid-cols-6">
    <div class="sm:col-span-4">
      <label for="min-price" class="block text-sm font-medium leading-6 text-gray-900">Product</label>
      <div class="mt-2">
        <%= text_field_tag "title", nil, data: {controller: "filters", action: "filters#submit"}, placeholder: 'What are you looking for?', class: "inline-block rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
      </div>
    </div>
    <div class="sm:col-span-1">
      <label for="min-price" class="block text-sm font-medium leading-6 text-gray-900">Min</label>
      <div class="mt-2">
        <%= number_field_tag "min_price", nil, data: {controller: "filters", action: "filters#submit"}, placeholder: 'min price', class: "inline-block rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
      </div>
    </div>
    <div class="sm:col-span-1">
      <label for="max-price" class="block text-sm font-medium leading-6 text-gray-900">Max</label>
      <div class="mt-2">
        <%= number_field_tag "max_price", nil, data: {controller: "filters", action: "filters#submit"}, placeholder: 'max price', class: "inline-block rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
      </div>
    </div>
  </div>

  <%= render partial: 'categories' %>


  <div class="inline-block">
    <a href="<%= get_app_url %>" class="bg-black hover:bg-gray-300 text-white font-bold py-2 px-4 rounded">
      Limpiar filtros
    </a>
    <%= render partial: 'sort' %>
  </div>


<% end %>
