<div class="inline-block text-sm px-4 py-2 leading-none rounded no-underline text-gray hover:text-gray-900 hover:bg-white mt-4 lg:mt-0">
  <%= hidden_field_tag "sort_by", nil, id: "sort_by" %>
  <div class="relative" data-controller="dropdown">
    <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
      <span class="appearance-none flex items-center inline-block text-gray-700">
        <p id="sort_text">Sort</p>
        <%= image_tag 'icons/down_arrow.svg' %>
      </span>
    </div>
    <div data-dropdown-target="menu" class="absolute left-10 mt-2 hidden z-10">
      <div class="bg-white shadow rounded border overflow-hidden">
        <%= link_to 'A-Z',  '#', data: {controller: 'sort', action: "click->dropdown#toggle click->sort#setOrder", sort_by: 'title ASC'}, class: 'no-underline block pl-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
        <%= link_to 'Z-A', '#', data: {controller: 'sort', action: "click->dropdown#toggle click->sort#setOrder", sort_by: 'title DESC'}, class: 'no-underline block px-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
        <%= link_to 'Price: Low to High', '#', data: {controller: 'sort', action: "click->dropdown#toggle click->sort#setOrder", sort_by: 'price ASC'}, class: 'no-underline block px-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
        <%= link_to 'Price: High to Low',  '#', data: {controller: 'sort', action: "click->dropdown#toggle click->sort#setOrder", sort_by: 'price DESC'}, class: 'no-underline block px-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
      </div>
    </div>
  </div>
</div>